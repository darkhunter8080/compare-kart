    <script>
        // function toggleUserProfile() {
        //     const userProfile = document.getElementById('user-profile');
        //     userProfile.style.display = (userProfile.style.display === 'none') ? 'block' : 'none';
        // }
        function toggleUserProfile() {
            const userProfile = document.getElementById('user-profile');
            const currentDisplayStyle = window.getComputedStyle(userProfile).getPropertyValue('display');

            if (currentDisplayStyle === 'none') {
                userProfile.style.display = 'block';
            } else {
                userProfile.style.display = 'none';
            }
        }

        // Check if the user profile is initially hidden and adjust the display accordingly
        window.addEventListener('DOMContentLoaded', function () {
            const userProfile = document.getElementById('user-profile');
            const currentDisplayStyle = window.getComputedStyle(userProfile).getPropertyValue('display');

            if (currentDisplayStyle === 'none') {
                userProfile.style.display = 'none';
            } else {
                userProfile.style.display = 'block';
            }
        });

    </script>